<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MAUI"
    xmlns:forms="clr-namespace:MAUI.Forms"
    xmlns:additemsforms="clr-namespace:MAUI.Forms.AddItemsForms"
    Title="MAUI">

    <!-- DM lapa -->
    <ShellContent
        Title="Data Management Page"
        ContentTemplate="{DataTemplate forms:DataManagementPage}"
        Route="DataManagementPage" />
    <!-- Add ITSupport, Ticket, Assignment lapa -->
    <ShellContent
        Title="Add Item"
        ContentTemplate="{DataTemplate forms:AddItemsPage}"
        Route="AddItemsPage" />

    <!-- Item List (priekš rediģēšanas un dzēšanas) -->
    <!-- <ShellContent
        Title="Item List"
        ContentTemplate="{DataTemplate forms:ItemListPage}"
        Route="ItemListPage" /> -->
</Shell>
