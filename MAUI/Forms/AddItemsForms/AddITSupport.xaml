<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Forms.AddItemsForms.AddITSupport"
             Title="AddITSupport">
    <VerticalStackLayout Margin="20">
        <Label 
            Text="Add ITSupport!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout Margin="10">
            <Label Text="Select Employee: "></Label>
            <Picker x:Name="cboEmployee"></Picker>
        </HorizontalStackLayout>
        <HorizontalStackLayout Margin="10">
            <Label Text="Specialization: "></Label>
            <Picker x:Name="cboSpecialization"></Picker>
        </HorizontalStackLayout>
        <Button x:Name="btnAddITSupport" Text="Add ITSupport" Clicked="BtnAddITSupport_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>