<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Forms.AddItemsForms.AddITSupport"
             Title="AddITSupport">
    <VerticalStackLayout>
        <Label 
            Text="Add ITSupport!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <HorizontalStackLayout>
            <Label Text="UserID: "></Label>
            <Entry x:Name="txtUserIDEntry" Placeholder="Enter UserID"></Entry>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Email: "></Label>
            <Entry x:Name="txtEmailEntry" Placeholder="Enter Email"></Entry>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Username: "></Label>
            <Entry x:Name="txtUsernameEntry" Placeholder="Enter Username"></Entry>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Is active? "></Label>
            <Picker x:Name="cboIsActive"></Picker>
        </HorizontalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Specialization: "></Label>
            <Picker x:Name="cboSpecialization"></Picker>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>