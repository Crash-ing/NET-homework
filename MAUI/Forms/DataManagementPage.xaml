<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Forms.DataManagementPage"
             Title="Data Management" NavigatedTo="ContentPage_NavigatedTo">
  <VerticalStackLayout Padding="12" Spacing="12">
    <Label Text="Data:" FontAttributes="Bold" />

    <!-- Scrollable area that displays the data; named to match code-behind -->
    <ScrollView HeightRequest="300">
      <Label x:Name="lblData"
             Text="(no data)"
             LineBreakMode="WordWrap"
             VerticalOptions="Start" />
    </ScrollView>

    <!-- First row of actions -->
    <HorizontalStackLayout Spacing="10">
      <Button Text="Create Test Data" Clicked="btnTestData_Clicked" />
      <Button Text="Reset" Clicked="btnReset_Clicked" />
    </HorizontalStackLayout>

    <!-- Second row of actions -->
    <HorizontalStackLayout Spacing="10">
      <Button Text="Save" Clicked="btnSave_Clicked" />
      <Button Text="Load" Clicked="btnLoad_Clicked" />
      <Button Text="Print" Clicked="btnPrint_Clicked" />
    </HorizontalStackLayout>
  </VerticalStackLayout>
</ContentPage>