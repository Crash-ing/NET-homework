<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUI.Forms.ItemListPage" NavigatedTo="ContentPage_NavigatedTo">
    <CollectionView x:Name="cVList" IsGrouped="True">
        <CollectionView.GroupHeaderTemplate>
            <DataTemplate>
                <Label Text="{Binding Name}"
                       FontSize="18"
                       FontAttributes="Bold"
                       Padding="10,5"
                       BackgroundColor="{AppThemeBinding Light=#F0F0F0, Dark=#333333}" />
            </DataTemplate>
        </CollectionView.GroupHeaderTemplate>

        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Orientation="Horizontal" Padding="10">
                    <Label Text="{Binding}" VerticalOptions="Center" HorizontalOptions="StartAndExpand" />
                    <HorizontalStackLayout Spacing="5">
                        <Button Text="Edit" Clicked="EditClicked" BindingContext="{Binding}" />
                        <Button Text="Delete" Clicked="DeleteClicked" BindingContext="{Binding}" />
                    </HorizontalStackLayout>
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>